@model EasyLearner.Service.Dto.SupportReportDto
@{
    Layout = null;
}

<form id="frmSupport">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">View Support</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="accordian-block border-0">
            <div class="accordian-para acc-show p-0">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" name="Id" />
                <input type="hidden" asp-for="RequestId" name="RequestId" />
                <div class="form-row mt-0">

                    <div class="form-group col-md-12">
                        <label for="StudentName">Student Name  <span class="text-danger">*</span></label>
                        <input type="text" asp-for="StudentName" name="StudentName" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="StudentUserName">UserName  <span class="text-danger">*</span></label>
                        <input type="text" asp-for="StudentUserName" name="StudentUserName" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="DateOfSend">Date Of Request Support  <span class="text-danger">*</span></label>
                        <input type="text" asp-for="DateOfSend" value="@Model.DateOfSend.ToShortDateString()" name="DateOfSend" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="TimeOfSend">Time Of Request Support  <span class="text-danger">*</span></label>
                        <input type="text" asp-for="TimeOfSend"  value="@Model.DateOfSend.ToLocalTime().ToShortTimeString()"name="TimeOfSend" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="SubjectOfSupport">Subject Of Support  <span class="text-danger">*</span></label>
                        <input type="text" asp-for="SubjectOfSupport" name="SubjectOfSupport" class="form-control" />
                    </div>

                    <div class="form-group col-md-12">
                        <label for="Description">Description  <span class="text-danger">*</span></label>
                        <input type="text" asp-for="Description" name="Description" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="spResponse" class="btn btn-outline-primary con_btn active">Send Support Response</button>
        <button type="button" id="spresponseHistory" class="btn btn-outline-primary con_btn active">View Support History</button>
        <button type="button" class="btn btn-outline-primary con_btn mr-auto" data-dismiss="modal">Close</button>
    </div>
</form>
<script type="text/javascript">

    $(document).ready(function () {

        $.each($("#frmSupport").find("input"), function () {
            $(this).prop("disabled", true);
        });

        $("#spResponse").on("click", function () {
            debugger;
            var requestId = $("#RequestId").val();
            window.location.href = `/Support/SendResponse?requestId=${requestId}`;
        });

        $("#spresponseHistory").on("click", function () {
            debugger;
            var requestId = $("#RequestId").val();
            window.location.href = `/Support/ViewSupportHistory?requestId=${requestId}`;
        });

    });




</script>